@page "/consumers/create/"
@inject HttpClient _client
@inject NavigationManager _navManager
@using ItemInsight.Shared.Domain;

<h3 class="card-title">Create new consumer</h3>
<hr />
<br />

<EditForm Model="@consumer" OnValidSubmit="CreateConsumer">
    <DataAnnotationsValidator />
    <ValidationSummary />

</EditForm>

@code {
    Consumer consumer = new Consumer();

    private IList<Review>? Reviews;

    protected async override Task OnInitializedAsync()
    {
        Reviews = await _client.GetFromJsonAsync<List<Review>>($"{Endpoints.ReviewsEndpoint}");
    }

    private async Task CreateConsumer()
    {
        await _client.PostAsJsonAsync(Endpoints.ConsumersEndpoint, consumer);
        _navManager.NavigateTo("/consumers/");
    }
}