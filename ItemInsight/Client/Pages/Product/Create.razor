@page "/products/create/"
@inject HttpClient _client
@inject NavigationManager _navManager
@using ItemInsight.Shared.Domain;

<h3 class="card-title">Create New Product</h3>
<hr />
<br />

<FormComponent ButtonText = "Create Product" OnValidSubmit = "CreateProduct" review = "product" />


@code {
    Product product = new Product();

    private IList<Review>? Reviews;
    private IList<Consumer>? Consumers;

    protected async override Task OnInitializedAsync()
    {
        Reviews = await _client.GetFromJsonAsync<List<Review>>($"{Endpoints.ReviewsEndpoint}");
        Consumers = await _client.GetFromJsonAsync<List<Consumer>>($"{Endpoints.ConsumersEndpoint}");
    }

    private async Task CreateCar()
    {
        await _client.PostAsJsonAsync(Endpoints.ProductsEndpoint, product);
        _navManager.NavigateTo("/products/");
    }

}